{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://example.com/quiz-api.schema.json",
  "title": "Quiz API Schema",
  "description": "Schema for the Quiz API input and output formats",
  "type": "object",
  "properties": {
    "request": {
      "$ref": "#/$defs/QuizRequest"
    },
    "response": {
      "$ref": "#/$defs/QuizResponse"
    }
  },
  "$defs": {
    "QuizRequest": {
      "type": "object",
      "required": [
        "goal",
        "num_questions",
        "difficulty"
      ],
      "properties": {
        "goal": {
          "type": "string",
          "enum": [
            "GATE AE",
            "Amazon SDE",
            "Google SWE"
          ],
          "description": "The goal of the quiz (e.g., 'Amazon SDE')",
          "example": "Amazon SDE"
        },
        "num_questions": {
          "type": "integer",
          "minimum": 1,
          "maximum": 10,
          "description": "Number of questions to generate",
          "example": 5
        },
        "difficulty": {
          "type": "string",
          "enum": [
            "beginner",
            "intermediate",
            "advanced",
            "expert"
          ],
          "description": "Difficulty level of the questions",
          "example": "intermediate"
        }
      },
      "additionalProperties": false
    },
    "QuizResponse": {
      "type": "object",
      "required": [
        "quiz_id",
        "goal",
        "questions"
      ],
      "properties": {
        "quiz_id": {
          "type": "string",
          "pattern": "^quiz_[a-zA-Z0-9]+$",
          "description": "Unique identifier for the quiz",
          "example": "quiz_1234"
        },
        "goal": {
          "type": "string",
          "enum": [
            "GATE AE",
            "Amazon SDE",
            "Google SWE"
          ],
          "description": "The goal of the quiz",
          "example": "Amazon SDE"
        },
        "questions": {
          "type": "array",
          "items": {
            "$ref": "#/$defs/Question"
          },
          "description": "List of quiz questions",
          "minItems": 1
        }
      },
      "additionalProperties": false
    },
    "Question": {
      "type": "object",
      "required": [
        "type",
        "question",
        "answer",
        "difficulty",
        "topic"
      ],
      "properties": {
        "type": {
          "type": "string",
          "enum": [
            "mcq",
            "short_answer",
            "coding"
          ],
          "description": "Type of question",
          "example": "mcq"
        },
        "question": {
          "type": "string",
          "minLength": 10,
          "description": "The question text",
          "example": "What is the time complexity of binary search?"
        },
        "options": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "description": "List of answer options (required for mcq, optional for others)",
          "example": [
            "A. O(n)",
            "B. O(log n)",
            "C. O(n log n)",
            "D. O(1)"
          ],
          "minItems": 4,
          "maxItems": 4,
          "if": {
            "properties": {
              "type": {
                "not": {
                  "const": "mcq"
                }
              }
            }
          },
          "then": {
            "type": "null"
          }
        },
        "answer": {
          "type": "string",
          "description": "The correct answer",
          "example": "B. O(log n)"
        },
        "difficulty": {
          "type": "string",
          "enum": [
            "beginner",
            "intermediate",
            "advanced",
            "expert"
          ],
          "description": "Difficulty level of the question",
          "example": "intermediate"
        },
        "topic": {
          "type": "string",
          "description": "Topic of the question",
          "example": "Algorithms"
        }
      },
      "additionalProperties": false,
      "if": {
        "properties": {
          "type": {
            "const": "mcq"
          }
        }
      },
      "then": {
        "required": [
          "options"
        ]
      }
    }
  }
}
